header role='banner'
  hgroup.page
    h1: a href='/' Sarbotte Designs
    h2 Sarbotte Quality Tool
    / span.was ?
.containerS.cf

  #application role='main'

    #editors
      .left
        h3.sqt
          span.openCode Test some code
          | /
          span.openSite Test a website
        #editor.editor
        #site
          form.form-horizontal#sqsite
            == bsInput('input', 'text', 'url', 'Url', 'Url')
            == bsInput('input', 'text', 'depth', 'Depth', 'Depth')
            button.btn type='submit' Ok

      #result.right
        h3.sqt Your results
        .results
          div
            b Total:
            span#total
            span  bytes
          div
            b Js & Css:
            span#jsAndCss
            span  bytes
          #sqi_parent
            b Sarbotte Quality Index :
            #sqi
              span.sqi
              span.comment
        .details
          table.table
            thead
              tr.result-header
                th Url
                th sqi

